@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar bg-dark text-white">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 bg-light">
            <AuthorizeView>
                <Authorized>
                    <span class="oi oi-person" aria-hidden="true"></span>
                    @{
                        var fullEmail = context.User.Identity?.Name ?? "";
                        var displayName = fullEmail.Contains("@") ? fullEmail.Split('@')[0] : fullEmail;
                    }
                    <span class="mx-2">@displayName</span>
                    <button class="btn btn-link text-danger" @onclick="HandleLogout">Logout</button>
                </Authorized>
                <NotAuthorized>
                    <a href="/login">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [Inject]
    private IAuthService AuthService { get; set; } = default!;

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private async Task HandleLogout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login");
    }
}