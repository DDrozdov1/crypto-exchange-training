@if (Errors != null && Errors.Any())
{
    <div class="alert alert-danger">
        @if (Errors.Count == 1)
        {
            <p>@Errors.First()</p>
        }
        else
        {
            <ul>
                @foreach (var error in Errors)
                {
                    <li>@error</li>
                }
            </ul>
        }
    </div>
}
@code {
    [Parameter]
    public List<string>? Errors { get; set; }
}